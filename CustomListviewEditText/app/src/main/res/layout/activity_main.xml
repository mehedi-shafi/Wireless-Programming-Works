<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="osproject.enf.customlistviewedittext.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_number_course_text"
            android:text="@string/enter_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/number_of_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="@string/course_number_hint"
            android:layout_below="@id/enter_number_course_text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="100dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_text"
            android:id="@+id/go_button"
            android:layout_below="@id/number_of_course"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
